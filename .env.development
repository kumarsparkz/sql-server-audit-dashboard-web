# ============================================================================
# DEVELOPMENT ENVIRONMENT VARIABLES (.env.development)
# ============================================================================

# API Configuration - Development
REACT_APP_API_BASE_URL=http://localhost:7001
REACT_APP_SIGNALR_HUB_URL=http://localhost:7001/dashboardHub

# Development specific settings
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_ENABLE_MOCK_DATA=false

# Faster refresh intervals for development
REACT_APP_DASHBOARD_REFRESH_INTERVAL=15000
REACT_APP_ALERTS_REFRESH_INTERVAL=5000

# Development tools
GENERATE_SOURCEMAP=true
ESLINT_NO_DEV_ERRORS=true
